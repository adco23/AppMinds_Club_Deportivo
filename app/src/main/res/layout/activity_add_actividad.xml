<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnBack"
            style="@style/BtnBack"
            android:contentDescription="@string/btn_back_description" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Registrar Actividad"
            android:paddingHorizontal="50dp"
            style="@style/MainTitle"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/actividadOptContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- Nombre -->
        <EditText
            android:id="@+id/inputName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:hint="Nombre"/>

        <!-- DÍAS DE LA SEMANA -->
        <!-- DÍAS DE LA SEMANA -->
        <TextView
            android:id="@+id/tvDaysLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Días de la actividad"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp" />

        <!-- Contenedor visual de los días -->
        <LinearLayout
            android:id="@+id/daysContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_days_container"
            android:padding="10dp"
            android:layout_marginBottom="18dp">

            <!-- fila 1: Lun a Jue -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <CheckBox
                    android:id="@+id/cbMon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lun"
                    android:textColor="@android:color/white"
                    android:buttonTint="@color/dark_green"
                    android:layout_marginEnd="8dp"/>

                <CheckBox
                    android:id="@+id/cbTue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mar"
                    android:textColor="@android:color/white"
                    android:buttonTint="@color/dark_green"
                    android:layout_marginEnd="8dp"/>

                <CheckBox
                    android:id="@+id/cbWed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mié"
                    android:textColor="@android:color/white"
                    android:buttonTint="@color/dark_green"
                    android:layout_marginEnd="8dp"/>

                <CheckBox
                    android:id="@+id/cbThu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jue"
                    android:textColor="@android:color/white"
                    android:buttonTint="@color/dark_green" />
            </LinearLayout>

            <!-- fila 2: Vie a Dom -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbFri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vie"
                    android:textColor="@android:color/white"
                    android:buttonTint="@color/dark_green"
                    android:layout_marginEnd="8dp"/>

                <CheckBox
                    android:id="@+id/cbSat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sáb"
                    android:textColor="@android:color/white"
                    android:buttonTint="@color/dark_green"
                    android:layout_marginEnd="8dp"/>

                <CheckBox
                    android:id="@+id/cbSun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dom"
                    android:textColor="@android:color/white"
                    android:buttonTint="@color/dark_green" />
            </LinearLayout>
        </LinearLayout>


        <!-- Horas -->
        <EditText
            android:id="@+id/inputStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:hint="Hora inicio (HH:mm)"
            android:focusable="false"
            android:clickable="true"
            android:inputType="text" />

        <EditText
            android:id="@+id/inputEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:hint="Hora fin (HH:mm)"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none" />

        <!-- Precio -->
        <EditText
            android:id="@+id/inputPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:hint="Precio"
            android:inputType="numberDecimal"/>

        <!-- Cupo -->
        <EditText
            android:id="@+id/inputCapacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:hint="Cupo"
            android:inputType="number" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddActNext"
        style="@style/ButtonPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="Siguiente"
        android:textAllCaps="false" />
</LinearLayout>
