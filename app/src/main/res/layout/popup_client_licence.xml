<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_header_card"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="CLUB DEPORTIVO"
                    android:textColor="@color/main"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_body_card"
                android:padding="16dp"
                android:stretchColumns="1">

                <TableRow android:layout_marginBottom="8dp">

                    <TextView
                        android:paddingEnd="16dp"
                        android:paddingStart="0dp"
                        android:text="NÂ° Carnet:"
                        android:textColor="@color/gray_500"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCLId"
                        android:text="12345678"
                        android:textColor="#000000" />
                </TableRow>

                <TableRow android:layout_marginBottom="8dp">

                    <TextView
                        android:paddingEnd="16dp"
                        android:paddingStart="0dp"
                        android:text="Cliente:"
                        android:textColor="@color/gray_500"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCLName"
                        android:text="Juan Pepe"
                        android:textColor="#000000" />
                </TableRow>

                <TableRow android:layout_marginBottom="8dp">

                    <TextView
                        android:paddingEnd="16dp"
                        android:paddingStart="0dp"
                        android:text="Tipo:"
                        android:textColor="@color/gray_500"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCLType"
                        android:text="Socio"
                        android:textColor="@color/green" />
                </TableRow>

                <TableRow android:layout_marginBottom="8dp">

                    <TextView
                        android:paddingEnd="16dp"
                        android:paddingStart="0dp"
                        android:text="Fecha Alta:"
                        android:textColor="@color/gray_500"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCLDate"
                        android:text="28/10/2025"
                        android:textColor="#000000" />
                </TableRow>
            </TableLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btn_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Descargar" />
    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Continuar" />


</LinearLayout>