<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="40dp">

    <!-- Header con botón back y título -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <ImageButton
            android:id="@+id/btnBack"
            style="@style/BtnBack"
            android:contentDescription="@string/btn_back_description" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/MainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingStart="35dp"
            android:paddingEnd="35dp"
            android:text="@string/add_profesor" />

    </RelativeLayout>

    <!-- Contenido principal con scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sección de selección de actividad -->
            <TextView
                android:id="@+id/tvActivityLabel"
                style="@style/LabelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:labelFor="@id/spinnerOptions"
                android:text="@string/assign_activity" />

            <Spinner
                android:id="@+id/spinnerOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_spinner"
                android:minHeight="48dp"
                android:padding="12dp"
                android:spinnerMode="dropdown"
                android:popupBackground="@color/spinner_background"
                tools:listitem="@android:layout/simple_spinner_dropdown_item" />

            <!-- Contenedor de actividad seleccionada -->
            <LinearLayout
                android:id="@+id/ActivitySelectedContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- Actividad seleccionada -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSelectedLabel"
                        style="@style/HighlightText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/you_selected" />

                    <TextView
                        android:id="@+id/ActivitySelected"
                        style="@style/HighlightText.Bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        tools:text="Yoga" />
                </LinearLayout>

                <!-- Información de horarios -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvScheduleInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Días de atención -->
                        <TextView
                            android:id="@+id/tvDaysLabel"
                            style="@style/InfoLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/attendance_days" />

                        <TextView
                            android:id="@+id/tvDaysValue"
                            style="@style/InfoValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            tools:text="Lunes, Jueves" />

                        <!-- Horario de inicio -->
                        <TextView
                            android:id="@+id/tvStartTimeLabel"
                            style="@style/InfoLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/start_time" />

                        <TextView
                            android:id="@+id/tvStartTimeValue"
                            style="@style/InfoValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            tools:text="09:00" />

                        <!-- Horario de fin -->
                        <TextView
                            android:id="@+id/tvEndTimeLabel"
                            style="@style/InfoLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/end_time" />

                        <TextView
                            android:id="@+id/tvEndTimeValue"
                            style="@style/InfoValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="12:00" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Botón guardar -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddProfSave"
        style="@style/ButtonPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:enabled="false"
        android:minHeight="48dp"
        android:text="@string/save"
        android:textAllCaps="false" />

</LinearLayout>